[Unit]
Description=Shipping Service

[Service]
User=roboshop
Environment=CART_ENDPOINT={{ lookup('amazon.aws.aws_ssm', 'roboshop.dev.shipping.cart_host:8080', region='us-east-1') }}
Environment=DB_HOST={{ lookup('amazon.aws.aws_ssm', 'roboshop.dev.shipping.mysql_host', region='us-east-1') }}
ExecStart=/bin/java -jar /app/shipping.jar
SyslogIdentifier=shipping

[Install]
WantedBy=multi-user.target
